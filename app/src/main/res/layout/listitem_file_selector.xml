<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/selector_file_name"
        android:layout_width="358dp"
        android:layout_height="22dp"
        android:layout_marginStart="6dp"
        android:layout_weight="1"
        android:text="File  Name Here...."
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/selector_file_thumbnails"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/selector_file_checkbox"
        android:layout_width="28dp"
        android:layout_height="36dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/selector_file_time"
        android:layout_width="148dp"
        android:layout_height="18dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="2dp"
        android:text="File Creation Date here"
        android:textAlignment="textEnd"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/selector_file_checkbox"
        app:layout_constraintStart_toEndOf="@+id/selector_file_extra"
        app:layout_constraintTop_toBottomOf="@+id/selector_file_type" />

    <TextView
        android:id="@+id/selector_file_type"
        android:layout_width="146dp"
        android:layout_height="18dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:text="File Extension Here"
        android:textAlignment="textEnd"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/selector_file_checkbox"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/selector_file_perm"
        app:layout_constraintTop_toBottomOf="@+id/selector_file_name" />

    <TextView
        android:id="@+id/selector_file_perm"
        android:layout_width="177dp"
        android:layout_height="18dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        android:text="File Permissions"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/selector_file_thumbnails"
        app:layout_constraintTop_toBottomOf="@+id/selector_file_name" />

    <TextView
        android:id="@+id/selector_file_extra"
        android:layout_width="177dp"
        android:layout_height="18dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        android:text="Extra Info"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/selector_file_thumbnails"
        app:layout_constraintTop_toBottomOf="@+id/selector_file_perm" />

    <ImageView
        android:id="@+id/selector_file_thumbnails"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

</androidx.constraintlayout.widget.ConstraintLayout>
