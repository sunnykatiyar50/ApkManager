<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@color/colorAccent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/spinner_item"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#00292828"
        android:fadingEdge="horizontal|vertical"
        android:gravity="center|right|center_horizontal|fill_horizontal|center_vertical"
        android:padding="@dimen/padding_least"
        android:text="@string/root_browser_textview_path_hint"
        android:textAlignment="center"
        android:textColor="@color/spinner_text_color"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="normal" />

</LinearLayout>