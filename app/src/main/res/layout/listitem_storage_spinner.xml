<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/my_divider"
    android:orientation="vertical">

    <TextView
        android:id="@+id/spinner_item"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#292828"
        android:fadingEdge="horizontal|vertical"
        android:gravity="center|right|center_horizontal|fill_horizontal|center_vertical"
        android:padding="@dimen/padding_least"
        android:text="This is an spinner item"
        android:textAlignment="center"
        android:textColor="#D17697"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:typeface="normal" />

</LinearLayout>