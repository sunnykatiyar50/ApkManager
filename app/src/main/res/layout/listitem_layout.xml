<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listview_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="2dp">

    <TextView
        android:id="@+id/text_apk_name"
        android:layout_width="363dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="1dp"
        android:autoSizeMaxTextSize="14dp"
        android:autoSizeMinTextSize="12dp"
        android:autoSizeTextType="uniform"
        android:ellipsize="end"
        android:lines="3"
        android:maxLines="3"
        android:minLines="2"
        android:text="FileName will be shown here..."
        android:textAlignment="gravity"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:tooltipText="File Path"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_extra" />

    <TextView
        android:id="@+id/text_file_size"
        android:layout_width="98dp"
        android:layout_height="22dp"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingStart="2dp"
        android:text="File Size Here.."
        android:textAlignment="textEnd"
        android:textSize="14sp"
        android:tooltipText="File Size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/file_select_box"
        android:layout_width="36dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:tooltipText="Click To Select"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/text_apk_name"
        app:layout_constraintTop_toBottomOf="@+id/text_app_version" />

    <TextView
        android:id="@+id/text_app_name"
        android:layout_width="250dp"
        android:layout_height="22dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:text="App Name Here"
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:tooltipText="App Name"
        app:layout_constraintStart_toEndOf="@+id/app_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_app_version"
        android:layout_width="139dp"
        android:layout_height="23dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:text="App version"
        android:textAlignment="textEnd"
        android:textSize="14dp"
        android:tooltipText="App Version"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_extra"
        app:layout_constraintTop_toBottomOf="@+id/text_apk_version" />

    <TextView
        android:id="@+id/text_apk_version"
        android:layout_width="136dp"
        android:layout_height="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:text="APK version"
        android:textAlignment="viewEnd"
        android:textSize="14dp"
        android:tooltipText="APK Version"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_file_size" />

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="48dp"
        android:layout_height="47dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/icon"
        android:tooltipText="Icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_pkg_name"
        android:layout_width="210dp"
        android:layout_height="19dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:text="Package Name Here..."
        android:textSize="14dp"
        android:tooltipText="Package Name"
        app:layout_constraintStart_toEndOf="@+id/app_icon"
        app:layout_constraintTop_toBottomOf="@+id/text_app_name" />

    <TextView
        android:id="@+id/text_extra"
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:text="status here"
        android:textAlignment="center"
        android:tooltipText="App Status"
        app:layout_constraintStart_toEndOf="@+id/text_time"
        app:layout_constraintTop_toBottomOf="@+id/text_pkg_name" />

    <TextView
        android:id="@+id/text_time"
        android:layout_width="109dp"
        android:layout_height="26dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:autoSizeMaxTextSize="14dp"
        android:autoSizeMinTextSize="10dp"
        android:autoSizeTextType="uniform"
        android:lines="1"
        android:maxLines="2"
        android:minLines="1"
        android:text="Last Install Time"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/app_icon"
        app:layout_constraintTop_toBottomOf="@+id/text_pkg_name" />

</android.support.constraint.ConstraintLayout>
