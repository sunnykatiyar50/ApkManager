<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sunnykatiyar.AppManager.AppListActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/FilePickerTheme" >

        <android.support.v7.widget.Toolbar
            android:id="@+id/settings_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimary"
            android:textAlignment="center"
            android:title="@string/app_name"
            app:popupTheme="@style/FilePickerTheme"
            app:subtitle="About"
            app:title="App Explorer"></android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


        <TextView
            android:id="@+id/about_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/settings_toolbar"
            android:layout_margin="5dp"
            android:layout_weight="0.02"
            android:padding="5dp"
            android:text="@string/about_title_text"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:typeface="sans"
            tools:textStyle="bold" />

        <TextView
            android:id="@+id/about_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_text"
            android:layout_marginTop="10dp"
            android:layout_weight="0.79"
            android:padding="5dp"
            android:text="@string/about_text_string"
            android:textSize="@dimen/text_size_medium" />


    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>


